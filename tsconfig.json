{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@db/*": ["src/db/*"],
			"@layouts/*": ["src/layouts/*"],
			"@styles/*": ["src/styles/*"],
			"@utils/*": ["src/utils/*"]
		},
		"types": ["vitest/globals"],
		"verbatimModuleSyntax": true
	}
}
